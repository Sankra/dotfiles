#!/bin/bash
set -e

# Raspberry Pi auto update script
# Runar Ovesen Hjerpbakk
# https://hjerpbakk.com
# 
# Usage: $ ./any_raspbian
#
# Net install:
#   $ curl https://raw.githubusercontent.com/Sankra/dotfiles/master/roles/any_raspbian | sh

crontab -l | grep -q "sudo apt -y update" && echo "Auto update of package list already exists in crontab" || (crontab -l 2>/dev/null; echo "0 3 * * * sudo apt -y update") | crontab -

echo "Installation complete. Enjoy!"

crontab -l